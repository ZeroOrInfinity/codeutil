<assembly>
    <id>all</id>
    <formats>
        <format>zip</format><!--打包的文件格式,也可以有：war zip-->
    </formats>
    <!--tar.gz压缩包下是否生成和项目名相同的根目录-->
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <!--是否把本项目添加到依赖文件夹下-->
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/</outputDirectory>
            <!--将scope为runtime的依赖包打包-->
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/main/config</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>模板制作教程2.5.1.md</source>
            <outputDirectory>/</outputDirectory>
            <destName>模板制作教程.md</destName>
        </file>
        <file>
            <source>target/codeutil-2.5.1-Release-jar-with-dependencies.jar</source>
            <outputDirectory>/</outputDirectory>
            <destName>codeutil-2.5.1.jar</destName>
        </file>
    </files>
</assembly>